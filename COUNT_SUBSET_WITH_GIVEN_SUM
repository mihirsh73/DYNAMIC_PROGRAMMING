// { Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

 // } Driver Code Ends
class Solution{

	public:
	int perfectSum(int arr[], int n, int sum)
	{
        int dp[n+1][sum+1];
       //initialization
           dp[0][0]=1;
           for(int j=1;j<sum+1;j++)                                                        // main logic
           {
                   dp[0][j]=0;
               
           }
           
          
       
       
       
       for(int i=1;i<=n;i++) 
       {
           for(int j=0;j<=sum;j++)
           {
               if(arr[i-1]<=j)
               {
                   dp[i][j]=dp[i-1][j]%1000000007 + dp[i-1][j-arr[i-1]]%1000000007;
               }
               else{
                  dp[i][j]=dp[i-1][j]%1000000007; 
               }
           }
       }
       
       return dp[n][sum]%1000000007;
	}
	  
};

